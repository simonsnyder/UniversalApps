<Page
    x:Name="pageRoot"
    x:Class="Body_Mass_and_Fitness.MainPage"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Body_Mass_and_Fitness"
    xmlns:common="using:Body_Mass_and_Fitness.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="AppName">BMI And Fitness</x:String>
    </Page.Resources>

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="pageTitle" 
                       Text="{StaticResource AppName}" 
                       Style="{StaticResource SubheaderTextBlockStyle}" 
                       IsHitTestVisible="false" 
                       TextWrapping="NoWrap"
                       VerticalAlignment="Bottom"
                       Margin="32,0,118,100" 
                       Grid.ColumnSpan="2"/>
        </Grid>
        <TextBlock HorizontalAlignment="Left" Height="70" Margin="30,60,0,0" TextWrapping="Wrap" Text="Know Your BMI" Style="{StaticResource HeaderTextBlockStyle}" VerticalAlignment="Top" Width="454"/>
        <TextBlock 
                HorizontalAlignment="Left" 
                Height="174" 
                TextWrapping="Wrap" 
                Text="Enter your Height and weight to know whether your weight is perfectly balanced with you height" 
                FontSize="40"
                VerticalAlignment="Top" 
                Width="939" Margin="257,45,0,0" Grid.Row="1"/>
        <TextBlock
                HorizontalAlignment="Left"
                Height="83" 
                Margin="257,314,0,0"
                Grid.Row="1" 
                TextWrapping="Wrap"
                Text="Weight (kilograms)" 
                FontSize="40"
                VerticalAlignment="Top" 
                Width="387"/>
        <TextBox 
                x:Name="weightData"
                FontSize="40"
                HorizontalAlignment="Left" 
                Height="66" 
                Margin="863,314,0,0" 
                Grid.Row="1" 
                TextWrapping="Wrap" 
                Text=""
                InputScope="Number"
                VerticalAlignment="Top" 
                Width="285"/>
        <TextBlock
            	HorizontalAlignment="Left"
            	Height="66" 
            	Margin="257,224,0,0"
            	Grid.Row="1" 
            	TextWrapping="Wrap"
            	Text="Height (meters)" 
            	FontSize="40"
            	VerticalAlignment="Top" 
            	Width="294"/>
        <TextBox 
                x:Name="heightData"
                FontSize="40"
            	HorizontalAlignment="Left" 
            	Height="63.014" 
            	Margin="861.37,226.21,0,0" 
            	Grid.Row="1" 
            	TextWrapping="Wrap" 
            	Text=""
            	InputScope="Number"
            	VerticalAlignment="Top" 
            	Width="284.243" RenderTransformOrigin="0.547,1.411" UseLayoutRounding="False" d:LayoutRounding="Auto">
            <TextBox.RenderTransform>
                <CompositeTransform Rotation="0.336" TranslateX="-0.337" TranslateY="0.077"/>
            </TextBox.RenderTransform>
        </TextBox>
        <Button x:ConnectionId='1' x:Name="calcBmiButton" 
                    Content="Calculate!" 
                FontSize="35"
                    HorizontalAlignment="Left" 
                    Height="116" 
                    Margin="586,426,0,0" 
                    Grid.Row="1" 
                    VerticalAlignment="Top"
                    Width="222"
                                      />

    </Grid>

    <Page.BottomAppBar>
        <CommandBar Visibility="Visible">
            <AppBarButton x:ConnectionId='2'
                Icon="Clear" 
                Label="Clear!" 
                Name="clearBtn"
                                      >
            </AppBarButton>

            <AppBarButton x:ConnectionId='3'
                Name="exitApp" 
                Icon="Home"
                Label="Exit"
                                     >
            </AppBarButton>
        </CommandBar>
    </Page.BottomAppBar>

</Page>

